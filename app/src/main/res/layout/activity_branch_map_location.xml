<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BranchMapLocation">

    <EditText
        android:id="@+id/editTextCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Current Location" />

    <Spinner
        android:id="@+id/spinnerDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCurrentLocation"
        android:hint="Choose Destination" />

    <Button
        android:id="@+id/buttonShowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerDestination"
        android:layout_centerHorizontal="true"
        android:text="Show Map" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonShowMap" />

</RelativeLayout>
