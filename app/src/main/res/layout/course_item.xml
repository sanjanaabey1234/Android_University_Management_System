<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/courseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/courseFeeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Fee: $0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/startingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Date: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/selectedBranchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Branch: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/selectedDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Duration: N/A"
        android:textSize="16sp" />
</LinearLayout>
