<!-- about_us_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgound2">

    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <TextView
        android:id="@+id/aboutUsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="16dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Branch 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/branch1Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/campus1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colombo Branch"
                    android:textSize="18sp"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Branch 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/branch2Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/campus2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galle Branch"
                    android:textSize="18sp"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Add more branches as needed -->

        </LinearLayout>
    </ScrollView>


</LinearLayout>
