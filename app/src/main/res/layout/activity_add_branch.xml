<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound2"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewBranchDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch Operation"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/editTextBranchCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonBack"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Branch Code"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextBranchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBranchCode"
        android:textColor="@color/white"
        android:hint="Branch Name"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonAddBranch"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@id/editTextBranchName"
        android:text="Add Branch"
        android:layout_marginTop="16dp"/>

</RelativeLayout>